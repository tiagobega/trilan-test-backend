{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "types": ["jest", "reflect-metadata"]
  },
  "exclude": ["node_modules"],
  "include": ["src", "api"]
}
